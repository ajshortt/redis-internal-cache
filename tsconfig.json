{
  "compilerOptions": {
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "target": "es2018",
    "outDir": "./build",
    "rootDirs": ["./src"],
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "noEmitOnError": true,
    "lib": [
      "es2017"
    ],
    "esModuleInterop": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
